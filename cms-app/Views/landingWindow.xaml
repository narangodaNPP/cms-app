                <StackPanel Orientation="horizontal" Width="auto">
                    <ContentControl Content="   CONTACT" Width="102" Height="18"/>
                </StackPanel>
            </Button>
            <Button Margin="10" Grid.Column="0" Grid.Row="10" x:Name="exitButton" Height="auto" Width="auto">
                <StackPanel Orientation="horizontal" Width="auto">
                    <ContentControl Content="   EXIT" Width="69" Height="18"/>
                </StackPanel>
            </Button>-->
            <!--end of sice bar-->




            <!--content Section-->
            <Grid HorizontalAlignment="Left" Height="535" Background="AliceBlue" VerticalAlignment="Top" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="4" Grid.RowSpan="8" Width="1260" >
                <Grid.RowDefinitions>


                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="2*"/>


                </Grid.RowDefinitions>
                <Image Grid.Row="0" Margin="30">
                    <!--image -->
                </Image>
